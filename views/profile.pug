extends profileLayout

block content
	section.profile-landing
		.content
			.title
				h1 Welcome, #{user.email}!
			.subheading
				h3 see how you have been feeling lately
			.paragraph
				p choose from the alternatives below
			.radios
				label.container
					| year
					input#radio-year(type='radio', name='radio', value='year', checked='checked')
					span.checkmark
				label.container
					| month
					input#radio-month(type='radio', name='radio', value='month', checked='checked')
					span.checkmark
				label.container
					| week
					input#radio-week(type='radio', name='radio', value='week', checked='checked')
					span.checkmark
			.quotes
				for mood in moods
					p= mood.note
			.chart-holder
				.lineChartContainer
					canvas#lineChart
			script(type='text/javascript', src='/dist/profile.js')